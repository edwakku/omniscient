<Window x:Class="omniscient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:omniscient"
        mc:Ignorable="d"
        Title="Omniscient 1.2" MouseDown="Window_MouseDown" Height="159.524" Width="412.833" Foreground="White" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterOwner" Visibility="Visible" AllowsTransparency="True" WindowStyle="None" Background="{x:Null}">



    <Grid Height="160" VerticalAlignment="Top" HorizontalAlignment="Left" Width="413">
        <Rectangle x:Name="TopBar_Copy" HorizontalAlignment="Left" Width="413" Height="90" VerticalAlignment="Top" Margin="0,70,0,0" Fill="#FF0F0F0F"/>
        <Rectangle x:Name="TopBar" HorizontalAlignment="Left" Width="413" Height="70" VerticalAlignment="Top">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#E5060023" Offset="0"/>
                    <GradientStop Color="#E5210E1F" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Label x:Name="CurrentlyOpen" Content="&gt; Current Window Title &lt;" HorizontalAlignment="Left" Margin="5,34,0,0" VerticalAlignment="Top" Height="32" Width="402" FontFamily="Arial" FontSize="18" Background="#00000000" Foreground="White" RenderTransformOrigin="0,0"/>
        <Button x:Name="CloseButton" Click="closeClick" Content="x" HorizontalAlignment="Left" Margin="10,9,0,0" VerticalAlignment="Top" Width="40" Height="20" FontFamily="Arial" RenderTransformOrigin="0.425,0.575" BorderBrush="#FF1B1B1B" Foreground="White" Background="#FF1B1B1B"/>
        <Button x:Name="MinimizeButton" Click="MinimizeButton_Click" Content="-" HorizontalAlignment="Left" Margin="50,9,0,0" VerticalAlignment="Top" Width="40" Height="20" FontFamily="Arial" BorderBrush="#FF1B1B1B" Foreground="White" Background="#FF1B1B1B"/>
        <Button x:Name="DiscordBtn" Content="Discord" HorizontalAlignment="Left" VerticalAlignment="Top" Width="59" Margin="95,9,0,0" Height="20" FontFamily="Arial" FontSize="11" Click="Button_Click" BorderBrush="#FF1B1B1B" Foreground="White" Background="#FF1B1B1B"/>
        <CheckBox x:Name="CustomTextCheck" Content="Use custom status" HorizontalAlignment="Left" Margin="10,110,0,0" VerticalAlignment="Top" Height="18" Width="157" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" Foreground="White" BorderBrush="#FF1B1B1B" FontFamily="Arial" TextOptions.TextHintingMode="Fixed" FontSize="14" Background="White"/>
        <TextBox x:Name="CustomStatusText" HorizontalAlignment="Left" Height="20" Margin="10,82,0,0" TextWrapping="Wrap" Text="&gt; custom status here &lt;" VerticalAlignment="Top" Width="157" Foreground="White" Background="#FF1B1B1B" BorderBrush="#FF1B1B1B" FontFamily="Arial" Cursor="" CaretBrush="White" FontSize="14"/>
        <TextBlock x:Name="apptitle" HorizontalAlignment="Left" Height="13" Margin="329,10,0,0" TextWrapping="Wrap" Text="Omniscient 1.2" VerticalAlignment="Top" Width="74" Foreground="White" FontFamily="Arial" FontSize="11"/>
        <TextBox x:Name="CustomAppText" HorizontalAlignment="Left" Height="20" Margin="172,82,0,0" TextWrapping="Wrap" Text="&gt; custom app name here &lt;" VerticalAlignment="Top" Width="182" Foreground="White" Background="#FF1B1B1B" BorderBrush="#FF1B1B1B" FontFamily="Arial" Cursor="" CaretBrush="White" FontSize="14"/>
        <CheckBox x:Name="CustomAppTextCheck" Content="Use custom app name" HorizontalAlignment="Left" Margin="10,128,0,0" VerticalAlignment="Top" Height="18" Width="182" Foreground="White" BorderBrush="#FF1B1B1B" FontFamily="Arial" TextOptions.TextHintingMode="Fixed" FontSize="14" Checked="CustomAppTextCheck_Checked" Unchecked="CustomAppTextCheck_Unchecked" Background="White"/>


    </Grid>
</Window>
